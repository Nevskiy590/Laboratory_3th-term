#include <iostream>

using namespace std;

int main() {
	setlocale(LC_ALL, "Russian");
	double a;
	cout << "Введите сторону квадрата: ";
	cin >> a;
	if (a > 0) {
		cout << "Площадь квадрата: " << a * a;
	}
	else {
		cout << "Ошибка программы";
	}


}




#include <iostream>

using namespace::std;

int main(){
	setlocale(LC_ALL, "Russian");
	double a, b, c;
	cout<<"Введите стороны прямоугольного параллелепипеда"<<endl;
	cout << "Введите сторону а: ";
	cin >> a;
	cout << "Введите сторону b: ";
	cin >> b;
	cout << "Введите сторону c: ";
	cin >> c;
	if ((a > 0) && (b > 0) && (c > 0)){
		cout <<"Объем прямоугольного параллелепипеда: "<<a*b*c;
	}
	else {
		cout << "Ошибка программы";
	}
	
}




#include <iostream>
using namespace::std;
int main() {
	setlocale(LC_ALL, "Russian");
	double speed, time;
	cout << "Введите скорость(в км/ч): ";
	cin >> speed;
	cout << "Введите время(в часах): ";
	cin >> time;
	if ((speed > 0) && (time > 0)) {
		cout << "Пройденное расстояние: " << speed * time <<" км";
	}
	else {
		cout << "Ошибка программы";
	}
}
